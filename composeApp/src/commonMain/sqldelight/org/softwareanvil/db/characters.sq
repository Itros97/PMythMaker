CREATE TABLE characters (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    first_name TEXT NOT NULL,
    last_name TEXT NOT NULL,
    age INTEGER,
    country_id INTEGER,
    occupation TEXT,
    description TEXT,
    created_at INTEGER NOT NULL,
    FOREIGN KEY(country_id) REFERENCES countries(id)
);

insert:
INSERT INTO characters(
    first_name,
    last_name,
    age,
    country_id,
    occupation,
    description,
    created_at
) VALUES (?, ?, ?, ?, ?, ?, ?);

selectAll:
SELECT
    id,
    first_name,
    last_name,
    age,
    country_id,
    occupation,
    description,
    created_at
FROM characters;

selectById:
SELECT
    id,
    first_name,
    last_name,
    age,
    country_id,
    occupation,
    description,
    created_at
FROM characters
WHERE id = ?;

deleteById:
DELETE FROM characters
WHERE id = ?;

selectByCountryName:
SELECT
    c.id,
    c.first_name,
    c.last_name,
    c.age,
    c.occupation,
    c.description,
    c.created_at,
    co.id   AS country_id,
    co.name AS country_name,
    co.description AS country_description
FROM characters c
LEFT JOIN countries co ON c.country_id = co.id
WHERE co.name = ?;
