CREATE TABLE countries (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL UNIQUE,
    description TEXT,
    created_at INTEGER NOT NULL
);

insert:
INSERT INTO countries(name, description, created_at)
VALUES (?, ?, ?);

selectAll:
SELECT id, name, description
FROM countries
ORDER BY name;

selectById:
SELECT id, name, description
FROM countries
WHERE id = ?;

deleteAll:
DELETE FROM countries;

deleteById:
DELETE FROM countries
WHERE id = ?;