CREATE TABLE countries (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL UNIQUE,
    description TEXT,
    foundationYear INTEGER
);

selectAll:
SELECT id, name, description, foundationYear
FROM countries
ORDER BY name;

selectById:
SELECT id, name, description, foundationYear
FROM countries
WHERE id = ?;

insert:
INSERT INTO countries(name, description, foundationYear)
VALUES (?, ?, ?);

deleteAll:
DELETE FROM countries;

updateById:
UPDATE countries
SET name = ?, description = ?, foundationYear = ?
WHERE id = ?;

deleteById:
DELETE FROM countries
WHERE id = ?;