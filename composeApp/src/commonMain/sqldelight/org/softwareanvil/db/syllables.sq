CREATE TABLE syllables (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    type TEXT NOT NULL,
    category TEXT NOT NULL,
    syllabe TEXT NOT NULL,
    weight INTEGER NOT NULL DEFAULT 1
);

selectByType:
SELECT syllabe, weight
FROM syllables
WHERE type = ? AND category = 'name';

insert:
INSERT INTO syllables(type, category, syllabe, weight)
VALUES (?, ?, ?, ?);