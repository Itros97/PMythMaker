CREATE TABLE syllables (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    type TEXT NOT NULL,
    category TEXT NOT NULL,
    syllable TEXT NOT NULL,
    weight INTEGER NOT NULL DEFAULT 1
);

selectByTypeAndCategory:
SELECT id, type, category, syllable, weight
FROM syllables
WHERE type = ? AND category = ?;

insert:
INSERT INTO syllables(type, category, syllable, weight)
VALUES (?, ?, ?, ?);

deleteById:
DELETE FROM syllables
WHERE id = ?;

countAll:
SELECT COUNT(*) FROM syllables;